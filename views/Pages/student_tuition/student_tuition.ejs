<!-- Begin Page Content -->
<div class="container-fluid">


    <h2>Student Tuition Fee</h2>

    <div class="row">




        <div class="col-xl-8 col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Student Tuition Table</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive table-striped">
                        <table class="table" id="student_tuition_table">
                            <thead class="" style="background-color: #4e73df;">
                                <tr class="text-center text-white">
                                    <th scope="col">#</th>
                                    <th scope="col">Student</th>
                                    <th scope="col">School Year</th>
                                    <th scope="col">Term</th>
                                    <th scope="col">Total</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody class="">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-lg-6">
            <div class="card shadow mb-4 input overflow-auto">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Inputs</h6>
                </div>
                <div class="center">
                    <div class="card-body ">
                        <form>
                            <input type="hidden" id="stf_id" name="stf_id">
                            <div class="mb-3">
                                <label for="stf_student_id" class="form-label">Student ID</label>
                                <select name="stf_student_id" id="stf_student_id" class="form-select w-100 p-1"
                                    aria-label="Default select example" style="border-radius:5px;" required>
                                    <option value="" disabled selected>Select Student</option>
                                </select>

                            </div>
                            <div class="mb-3">
                                <label for="stf_school_year" class="form-label">School Year</label>
                                <input type="text" class="form-control" id="stf_school_year" name="stf_school_year"
                                    placeholder="2025..." required>
                            </div>
                            <div class="mb-3">
                                <label for="stf_term" class="form-label">Term</label>
                                <input type="number" class="form-control" id="stf_term" name="stf_term"
                                    placeholder="1..." required>
                            </div>
                           
                            <div class="mb-3">
                                <label for="stf_status" class="form-label">Status</label>
                                <select name="stf_status" id="stf_status" class="form-select w-100 p-1"
                                    aria-label="Default select example" style="border-radius:5px;" required>
                                    <option value="" disabled selected>Select Status</option>
                                    <option value="PAID">PAID</option>
                                    <option value="PARTIALLY PAID">PARTIALLY PAID</option>
                                    <option value="NOT PAID">NOT PAID</option>
                                </select>
                            </div>
                            <br>
                            <div class="mb-3 text-center">
                                <button type="submit" class="btn btn-primary w-100" id="submitFormBtn">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>



</div>

<div class="modal fade" id="StudentModal" tabindex="-1" role="dialog" aria-labelledby="StudentModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="StudentModalLabel">Student Tuition</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card-body">
                    <div class="table-responsive table-striped">
                        <table class="table" id="transaction_table">
                            <thead class="" style="background-color: #4e73df;">
                                <tr class="text-center text-white">
                                    <th scope="col">Mode of Payment</th>
                                    <th scope="col">Amount</th>
                                    <th scope="col">Previous Balance</th>
                                    <th scope="col">Current Balance</th>
                                    <th scope="col">Received By</th>
                                    <th scope="col">Paid By</th>
                                </tr>
                            </thead>
                            <tbody class="">
                            </tbody>
                        </table>
                </div>
            </div>
            </div>
        </div>
    </div>
</div>
<!-- NO SUBJECT ENROLLED MODAL -->
<div class="modal fade" id="noSubjectEnrolledModal" tabindex="-1" role="dialog" aria-labelledby="noSubjectEnrolledModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="noSubjectEnrolledModalLabel">No Subject Enrolled</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                The student has not enrolled in any subjects for the selected term and school year.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<!-- DUPLICATE VALUE MODAL -->
<div class="modal fade" id="duplicateValueModal" tabindex="-1" role="dialog" aria-labelledby="duplicateValueModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="duplicateValueModalLabel">Duplicate Value</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Student Tuition data already exists. Please enter a a different school year or term for student.
