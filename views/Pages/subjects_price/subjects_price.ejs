<!-- Begin Page Content -->
<div class="container-fluid">

    <h2>Student Subjects Price</h2>
    <button type="button" class="nav-link collapsed btn btn-primary" href="#" data-toggle="collapse"
    data-target="#collapse1" aria-expanded="true" aria-controls="collapseTwo">
    <i class="fas fa-fw fa-cog"></i>
    <span>Add Student</span>
  </button>
    <div class="row">

        <div id="collapse1" class="collapse h-50 w-100" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
        <div class="card shadow mb-4 input overflow-auto">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Inputs</h6>
            </div>
            <div class="center">
                <div class="card-body ">
                    <form>

                        <div class="d-flex justify-content-between align-items-center">
                        <div class="mb-3">
                            <label for="msp_subject_id" class="form-label">Subject ID</label>
                            <select class="form-control" id="msp_subject_id" name="edit_msp_subject_id" required>
                                <option value="" disabled selected>Select Subject</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="msp_price" class="form-label">Price</label>
                            <input type="text" class="form-control" id="msp_price" name="msp_price"
                                placeholder="1000...">
                        </div>
                        <div class="mb-3">
                            <label for="msp_no_unit" class="form-label">No. of Units</label>
                            <input type="text" class="form-control" id="msp_no_unit" name="msp_no_unit"
                                placeholder="3...">
                        </div>
                        <div class="mb-3">
                            <label for="msp_no_of_hour" class="form-label">No. of Hours</label>
                            <input type="text" class="form-control" id="msp_no_of_hour" name="msp_no_of_hour"
                                placeholder="45...">
                        </div>
                        <div class="mb-3">
                            <label for="msp_status" class="form-label">Status</label>
                            <select name="msp_status" id="msp_status" class="form-select w-100 p-1"
                                aria-label="Default select example" style="border-radius:5px;">
                                <option selected>Select Status</option>
                                <option value="Active">Active</option>
                                <option value="Inactive">Inactive</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="msp_created_by" class="form-label">Created By</label>
                            <input type="text" class="form-control" id="msp_created_by" name="msp_created_by"
                                placeholder="John Doe...">
                        </div>
                    </div>
                        <br>
                        <div class="mb-3 text-center">
                            <button type="button" class="btn btn-primary w-100" id="submitFormBtn">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

        <div class="col-xl-12 col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Table</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive table-striped">
                        <table class="table" id="subject_price_table">
                            <thead class="" style="background-color: #4e73df;">
                                <tr class="text-center text-white">
                                    <th scope="col">#</th>
                                    <th scope="col">Subject ID</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">No. of Units</th>
                                    <th scope="col">No. of Hours</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Created By</th>
                                    <th scope="col">Created Date</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody class="">

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- EDIT MODAL -->
    <div class="modal fade" id="editSubjectPriceModal" tabindex="-1" role="dialog" aria-labelledby="editSubjectPriceModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editSubjectPriceModalLabel">Edit Subject Price</h5>
