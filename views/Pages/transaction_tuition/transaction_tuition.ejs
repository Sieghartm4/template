                    <form id="editTransactionForm"></form>
                        <input type="hidden" id="edit_ttf_id" name="edit_ttf_id">
                        <div class="form-group">
                            <label for="edit_ttf_tuition_fee_id" class="form-label">Tuition Fee ID</label>
                            <select name="edit_ttf_tuition_fee_id" id="edit_ttf_tuition_fee_id" class="form-select w-100 p-1"
