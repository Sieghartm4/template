                        <div class="form-group">
                            <label for="edit_ttf_mode_of_payment" class="form-label">Mode Of Payment</label>
                            <select class="form-control" id="edit_ttf_mode_of_payment" name="edit_ttf_mode_of_payment" required>
                                <option value="" disabled selected>Select Payment</option>
                                <option value="CASH">CASH</option>
                                <option value="CREDIT CARD">CREDIT CARD</option>
                                <option value="DEBIT CARD">DEBIT CARD</option>
                                <option value="E-PAYMENT">E-PAYMENT</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="edit_ttf_amount" class="form-label">Amount</label>
                            <input type="number" class="form-control" id="edit_ttf_amount" name="edit_ttf_amount" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_ttf_previous_balance" class="form-label">Previous Balance</label>
                            <input type="number" class="form-control" id="edit_ttf_previous_balance" name="edit_ttf_previous_balance" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_ttf_current_balance" class="form-label">Current Balance</label>
                            <input type="number" class="form-control" id="edit_ttf_current_balance" name="edit_ttf_current_balance" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_ttf_received_by" class="form-label">Received By</label>
                            <input type="text" class="form-control" id="edit_ttf_received_by" name="edit_ttf_received_by" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_ttf_paid_by" class="form-label">Paid By</label>
                            <input type="text" class="form-control" id="edit_ttf_paid_by" name="edit_ttf_paid_by" required>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary" id="save_edit">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

