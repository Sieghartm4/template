        <i class="fas fa-fw fa-cog"></i>
        <span>Add Transaction</span>
    </button>

    <div class="row">


        <div id="collapse1" class="collapse h-50 w-100" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
            <div class="card shadow mb-4 input overflow-auto">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Inputs</h6>
                </div>
                <div class="center">
                    <div class="card-body">
                        <form>
                            <div class="container">
                                <div class="row">
                                    <div class="col-md-4 mb-3">
                                        <label for="ttf_tuition_fee_id" class="form-label">Tuition Fee ID</label>
                                        <select name="ttf_tuition_fee_id" id="ttf_tuition_fee_id" class="form-select w-100 p-1"
                                            aria-label="Default select example" style="border-radius:5px;" required>
                                            <option value="" disabled selected>Select Student Tuition</option>
                                        </select>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label for="ttf_mode_of_payment" class="form-label">Mode Of Payment</label>
                                        <select name="ttf_mode_of_payment" id="ttf_mode_of_payment" class="form-select w-100 p-1"
                                            aria-label="Default select example" style="border-radius:5px; ">
                                            <option selected>Select Payment</option>
                                            <option value="CASH">CASH</option>
                                            <option value="CREDIT CARD">CREDIT CARD</option>
                                            <option value="DEBIT CARD">DEBIT CARD</option>
                                            <option value="E-PAYMENT">E-PAYMENT</option>
                                        </select>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label for="ttf_amount" class="form-label">Amount</label>
                                        <input type="number" class="form-control" id="ttf_amount"
                                            placeholder="Enter amount">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-4 mb-3">
                                        <label for="ttf_previouse_balance" class="form-label">Previous Balance</label>
                                        <input type="number" class="form-control" id="ttf_previous_balance"
                                            placeholder="Enter previous balance">
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label for="ttf_current_balance" class="form-label">Current Balance</label>
                                        <input type="number" class="form-control" id="ttf_current_balance"
                                            placeholder="Enter current balance">
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label for="ttf_received_by" class="form-label">Received By</label>
                                        <input type="text" class="form-control" id="ttf_received_by"
                                            placeholder="Enter receiver name">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-4 mb-3">
                                        <label for="ttf_paid_by" class="form-label">Paid By</label>
                                        <input type="text" class="form-control" id="ttf_paid_by"
                                            placeholder="Enter payer name">
                                    </div>
                                </div>

                                <div class="mb-3 center">
                                    <button type="button" class="btn btn-primary w-50"
                                        id="submitFormBtn">Submit</button>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-12 col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Table</h6>

                </div>
                <div class="card-body">
                    <div class="table-responsive table-striped">
                        <table class="table" id="transaction_tuition_table">
                            <thead class="" style="background-color: #4e73df;">
                                <tr class="text-center text-white">
                                    <th scope="col">#</th>
                                    <th scope="col">Tuition Fee ID</th>
                                    <th scope="col">Mode of Payment</th>
                                    <th scope="col">Amount</th>
                                    <th scope="col">Previous Balance</th>
                                    <th scope="col">Current Balance</th>
                                    <th scope="col">Received By</th>
                                    <th scope="col">Paid By</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody class="text-center">
                            </tbody>
                        </table>
                    </div>
                </div>


            </div>
        </div>

    </div>
    <!-- EDIT MODAL -->
