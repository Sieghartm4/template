<!-- Begin Page Content -->
<div class="container-fluid">


    <h2>Student Grade</h2>
    <button type="button" class="nav-link collapsed btn btn-primary" href="#" data-toggle="collapse"
        data-target="#collapse1" aria-expanded="true" aria-controls="collapseTwo">
        <i class="fas fa-fw fa-cog"></i>
        <span>Add Student Grade</span>
    </button>

    <div id="collapse1" class="collapse h-50 w-100" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
        <div class="card shadow mb-4 input overflow-auto">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Inputs</h6>
            </div>
            <div class="center">
                <div class="card-body">
                    <form>
                        <div class="container">
                            <div class="row">
                                <div class="col-md-3 mb-3">
                                    <label for="student" class="form-label">Student:</label>
                                    <select name="sg_student_id" id="sg_student_id" class="form-select w-100 p-1"
                                        aria-label="Default select example" style="border-radius:5px;">

                                    </select>
                                </div>
                                <div class="col-md-3 mb-3 text-center">
                                    <label for="subjects" class="form-label">Subjects:</label>
                                    <select name="sg_subject_id" id="sg_subject_id" class="form-select w-100 p-1"
                                        aria-label="Default select example" style="border-radius:5px;">
                                        <option value="3">Math</option>
                                        <option value="4">Web Development</option>
                                    </select>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <label for="sg_school_year" class="form-label">School Year:</label>
                                        <input type="text" class="form-control" id="sg_school_year"
                                            name="sg_school_year" placeholder="2024-2025...">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-3 mb-3">
                                    <label for="sg_term" class="form-label">Term:</label>
                                    <input type="number" class="form-control" id="sg_term" name="sg_term"
                                        placeholder="1...">
                                </div>
                                <div class="col-md-3 mb-3">
                                    <label for="sg_grades" class="form-label">Grades:</label>
                                    <input type="text" class="form-control" id="sg_grades" name="sg_grades"
                                        placeholder="87...">
                                </div>
                                <div class="col-md-3 mb-3">
                                    <label for="sg_final_grade" class="form-label">Final Grade:</label>
                                    <input type="number" class="form-control" id="sg_final_grade" name
                                        placeholder="86...">
                                </div>
                                <div class="col-md-3 mb-3">
                                    <label for="sg_status" class="form-label">Status:</label>
                                    <input type="text" class="form-control" id="sg_status" name placeholder="Passed...">
                                </div>
                            </div>
                            <div class="mb-3 text-center">
                                <button type="button" class="btn btn-primary w-100" id="submitFormBtn">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-12 col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Table</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive table-striped">
                        <table class="table" id="student_grade_table">
                            <thead class="" style="background-color: #4e73df;">
                                <tr class="text-center text-white">
                                    <th scope="col">#</th>
                                    <th scope="col">Student ID</th>
                                    <th scope="col">Subject ID</th>
                                    <th scope="col">School Year</th>
                                    <th scope="col">Term</th>
                                    <th scope="col">Grades</th>
                                    <th scope="col">Final Grade</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody class="">

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- EDIT MODAL -->
    <div class="modal fade" id="editStudentModal" tabindex="-1" role="dialog" aria-labelledby="editStudentModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editSudentModalLabel">Edit Student</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="editStudentForm">
                        <input type="hidden" id="edit_sg_id" name="edit_sg_id">
                        <div class="form-group">
                            <label for="edit_sg_student_id" class="form-label">Student</label>
                            <select name="edit_sg_student_id" id="edit_sg_student_id" class="form-select w-100 p-1"
                                aria-label="Default select example" style="border-radius:5px;">
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="edit_sg_subject_id" class="form-label">Subjects</label>
                            <select name="edit_sg_subject_id" id="edit_sg_subject_id" class="form-select w-100 p-1"
                                aria-label="Default select example" style="border-radius:5px;">
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="edit_sg_school_year" class="form-label">School Year</label>
                            <input type="text" class="form-control" id="edit_sg_school_year" name="edit_sg_school_year" placeholder="2024-2025...">
                        </div>
                        <div class="form-group">
                            <label for="edit_sg_term" class="form-label">Term</label>
                            <input type="number" class="form-control" id="edit_sg_term" name="edit_sg_term"
                                placeholder="1...">
                        </div>
                        <div class="form-group">
                            <label for="edit_sg_grades" class="form-label">Grades</label>
                            <input type="text" class="form-control" id="edit_sg_grades" name="edit_sg_grades"
                                placeholder="87, 90, 79, 76, 89...">
                        </div>
                        <div class="form-group">
                            <label for="edit_sg_final_grade" class="form-label">Final Grade</label>
                            <input type="number" class="form-control" id="edit_sg_final_grade"
                                name="edit_sg_final_grade" placeholder="86...">
                        </div>
                        <div class="form-group">
                            <label for="edit_sg_status" class="form-label">Status</label>
                            <input type="text" class="form-control" id="edit_sg_status" name="edit_sg_status"
                                placeholder="Passed...">
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-primary" id="save_edit">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!--  DELETE MODAL -->
    <div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog"
        aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmDeleteModalLabel">Confirm Delete</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this student?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
                </div>
            </div>
        </div>
    </div>

    <!--  INSERT MODAL -->
    <div class="modal fade" id="confirmInsertModal" tabindex="-1" role="dialog" aria-labelledby="confirmInserModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmInsertModalLabel">Confirm Insert</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to Insert this student?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirmInsertBtn">Insert</button>
                </div>
            </div>
        </div>
    </div>
        <!--  CONFIRM EDIT MODAL -->
        <div class="modal fade" id="confirmEditModal" tabindex="-1" role="dialog" aria-labelledby="confirmEditModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="confirmEditModalLabel">Confirm Edit</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              Are you sure you want to Edit this student?
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
              <button type="button" class="btn btn-danger" id="confirmEditBtn">Edit</button>
            </div>
          </div>
        </div>
    </div>
    <!-- REQUIRED FIELDS MODAL -->
    <div class="modal fade" id="requiredFieldsModal" tabindex="-1" role="dialog"
        aria-labelledby="requiredFieldsModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="requiredFieldsModalLabel">Required Fields Missing</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Please fill in all required fields before submitting the form.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>